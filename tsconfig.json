{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "build",
    "allowJs": false,
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "build"]
}
