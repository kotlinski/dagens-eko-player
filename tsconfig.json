{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "allowJs": false,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "outDir": "./build"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "build"]
}
