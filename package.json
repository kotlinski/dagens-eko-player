{
  "name": "dagens-eko-player",
  "version": "1.0.0",
  "main": "src/main.js",
  "license": "MIT",
  "bin": {
    "run-dagens-eko": "./build/main.js"
  },
  "engines": {
    "node": ">=18",
    "yarn": "^1.22.18"
  },
  "scripts": {
    "main": "ts-node src/main.ts",
    "build": "tsc --build tsconfig.build.json",
    "lint": "eslint --cache .",
    "lint-fix": "eslint --quiet --fix .",
    "format": "prettier --loglevel=silent --write .",
    "format-check": "prettier --check .",
    "test": "jest",
    "vlc-help": "ts-node src/scripts/vlc-command-line-docs.ts"
  },
  "prettier": "@springworks/prettier-config",
  "eslintConfig": {
    "extends": "@springworks/eslint-config-typescript",
    "ignorePatterns": [
      "build",
      "node_modules"
    ],
    "rules": {
      "no-console": "off"
    }
  },
  "repository": "git@github.com:kotlinski/dagens-eko-player.git",
  "author": "Simon Kotlinski <simon.kotlinski@gmail.com>",
  "dependencies": {
    "dayjs": "^1.11.6",
    "node-fetch": "^2.6.7",
    "onoff": "^6.0.3"
  },
  "devDependencies": {
    "@springworks/eslint-config-typescript": "^3005.159.0",
    "@springworks/prettier-config": "^3005.77.0",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.11.9",
    "@types/node-fetch": "^2.6.2",
    "eslint": "^8.28.0",
    "jest": "^28.1.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
